<?xml version="1.0" encoding="utf-8"?>
<com.xidian.mktime.skin.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

        <include layout="@layout/include_toolbar"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/white_80"
        android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@color/white"
        android:orientation="vertical">

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivToken"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_image_margin_left="@dimen/option_item_margin_left"
            app:left_image_margin_right="@dimen/option_item_text_image_margin"
            app:left_src="@mipmap/blank"
            app:left_text="当前积分"
            app:left_text_color="@color/gray_setting"
            app:left_text_size="14sp"
            app:right_text="0"
            />


    </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/option_item_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <com.lqr.optionitemview.OptionItemView
                    android:id="@+id/oivSignIn"
                    style="@style/OptionItem"
                    android:background="@drawable/selector_option_item"
                    app:left_image_margin_left="@dimen/option_item_margin_left"
                    app:left_image_margin_right="@dimen/option_item_text_image_margin"
                    app:left_src="@mipmap/blank"
                    app:left_text="打卡赚积分"
                    app:left_text_color="@color/gray_setting"
                    app:left_text_size="14sp"
                    app:right_text="打卡"
                     />

                <View
                    style="@style/Line"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px" />



                <com.lqr.optionitemview.OptionItemView
                    android:id="@+id/oivBonus"
                    style="@style/OptionItem"
                    android:background="@drawable/selector_option_item"
                    app:left_image_margin_left="@dimen/option_item_margin_left"
                    app:left_image_margin_right="@dimen/option_item_text_image_margin"
                    app:left_src="@mipmap/blank"
                    app:left_text="专注有奖"
                    app:left_text_color="@color/gray_setting"
                    app:left_text_size="14sp"
                    app:right_text="已专注0分钟"
                     />


            </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.xidian.mktime.skin.AutoLinearLayout>
